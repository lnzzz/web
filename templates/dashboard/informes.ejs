<div class="container-fluid">
    <h1>Cargar Informe</h1>
    <div class="row">
        <div class="col d-flex">
            <form action="/upload" method="POST" enctype="multipart/form-data">
                <div class="input-group">
                    <label for="report-file" class="form-label"></label>
                    <input class="form-control" type="file" id="report-file" name="report-file">
                    <button class="btn btn-success" id="max-morning-btn">Subir Informe</button>
                </div>
            </form>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col">
            <h1>Listado de Informes</h1>
            <table class="table">
                <thead>
                    <th>Fecha de subida</th>
                    <th>Nombre del archivo</th>
                    <th>Activo</th>
                    <th>Acciones</th>
                </thead>
                <tbody>
                    <% for (let i=0; i<data.reportsData.length; i++) { %>
                        <tr>
                            <td><%= data.reportsData[i].date %></td>
                            <td><%= data.reportsData[i].fileName %></td>
                            <td>   
                                <% if (data.reportsData[i].active === true) { %>
                                    SI
                                <% } else { %> 
                                    NO
                                <% } %>
                            </td>
                            <td>
                                <% if (data.reportsData[i].active === true) { %>
                                    <button class="btn btn-danger unpublisher" id="unpublisher-<%=data.reportsData[i]._id.toString() %>">Despublicar</button>
                                <% } else { %> 
                                    <button class="btn btn-success publisher" id="publisher-<%=data.reportsData[i]._id.toString() %>">Publicar</button>
                                <% } %>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>